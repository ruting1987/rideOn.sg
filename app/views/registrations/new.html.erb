<% if session[:omniauth] %>

<div class="span4 offset4  well well-large">
	<div class="span12">	
	<font size="6px">Just one more step!</font><br/>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		<%= f.email_field :email, :autofocus => true, :placeholder =>"Your Email", :class =>"span12" %><br/>
		<%= hidden_field_tag "user[roles][]", "member" %>
		<%= f.submit "Done!", :class =>"btn btn-block btn-info" %>
		<% end %>
	</div>
</div>

<% end %>










